<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">


    <androidx.cardview.widget.CardView

        android:id="@+id/item_city_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/item_iv_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="北京"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/city_iv_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:text="12℃"
                android:textSize="40sp" />

            <ImageView
                android:id="@+id/item_iv_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/city_iv_temp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#808A87" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_city_tv_cond"
                android:layout_below="@id/item_iv_line"
                android:textSize="16sp"
                android:text="天气：晴"/>

            <TextView
                android:layout_width="2dp"
                android:layout_height="20dp"
                android:layout_below="@id/item_iv_line"
                android:id="@+id/item_tv_line2"
                android:layout_toRightOf="@id/item_city_tv_cond"
                android:background="#808A87"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_city_wind"
                android:textSize="16sp"
                android:text="东南风四级"
                android:layout_below="@id/item_iv_line"
                android:layout_toRightOf="@id/item_tv_line2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_city_tempRange"
                android:textSize="16sp"
                android:layout_below="@id/item_iv_line"
                android:layout_alignParentRight="true"
                android:text="18-30℃"
                android:layout_marginRight="20dp"/>







        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>